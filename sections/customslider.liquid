<!-- Welcome section starts -->
{{ 'owl.carousel.css' | asset_url | stylesheet_tag }}
{{ 'jquery.min.js' | asset_url | script_tag }}
  {{ 'owl.carousel.js' | asset_url | script_tag }}
<section class="imagesslider">
<div class="container">
    <div class="heading-section"> {% if section.settings.section-heading != blank %}
        <h2 class="section-heading" style="text-align: center;">{{ section.settings.section-heading }}</h2>
        {% endif %} 
    </div>
    <div id="owl-demo-testimonial" class="owl-carousel owl-theme">
        <div>
            {% for block in section.blocks %}
              <div class="custom-testimonial">
                {% if block.settings.image != blank %}
                  <div class="images"><img src="{{ block.settings.image | img_url: 'large' }}" id="hero-header" class="relative z-0"/>
                  </div>
                {% endif %}
                {% if block.settings.authername != blank %}
                    <div class="auther-name">
                            {{ block.settings.authername}}
                    </div>
                {% endif %}
                 {% if block.settings.designation != blank %}
                    <div class="designation">
                            {{ block.settings.designation}}
                    </div>
                {% endif %}
                {% if block.settings.description != blank %}
                    <div class="description">
                            {{ block.settings.description}}
                    </div>
                {% endif %}
        </div>
            {% endfor %}
        </div>
    </div>
  </div>
</section>
<!-- Welcome section ends -->
{% schema %}
{
"name": "Testimonial slider",
"settings": [
    {
        "id": "section-heading",
        "type": "text",
        "label": "Heading "
        }
],
"max_blocks": 5,
"blocks": [{
    "type": "Tesimonialss",
    "name": "Testimonial",
    "settings": [{
          "type": "header",
          "content": "Testimonial Image"
       },
       {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
       },
       {
        "type":"text",
        "id":"authername",
        "label":"Auther name"
    },
    {
        "type":"text",
        "id":"designation",
        "label":"Designation"
    },
    {
        "type":"richtext",
        "id":"description",
        "label":"Description"
    }
    ]
 }
],
"presets": [
{
"name": "Testimonial slider",
"blocks": [
    {
      "type": "Tesimonialss"
    }
  ]

}
]
}
{% endschema %}
{% stylesheet %}
{% endstylesheet %}
{% javascript %}
    jQuery(document).ready(function() {
      jQuery("#owl-demo-testimonial").owlCarousel({
    loop:true,
    stagePadding: 50,
    margin:80,
    nav:true,
    dots: false,
    responsive:{
        0:{
            items:1,
          autoplay: true,
          autoplayTimeout: 3000
        },
        600:{
            items:3
        },
        1000:{
            items:5
        }
    }
    
})
 $( ".owl-prev").html('<i class="fa fa-angle-left"></i>');
 $( ".owl-next").html('<i class="fa fa-angle-right"></i>');
      });
    });
{% endjavascript %}

